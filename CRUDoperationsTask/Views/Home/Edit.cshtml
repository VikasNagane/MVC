@model CRUDoperationsTask.Models.EmployeeModel
@{
    ViewBag.Title = "Edit";
}

<h6>Edit</h6>

<h1 class='text-center bg-primary text-white'> Edit Employee's Data </h1>
<br>
<form action="~/Home/Edit" method="post">
    <div class="container text-center">
        <div class="row">
        <label class="col-sm-2" >EmpID</label>
        <div class="col-sm-5">
            <input  name="EmpID" value="@Model.EmpID" class="form-control" readonly />
        </div>
    </div><br/>


       <div class="row">
            <label class="col-sm-2">EmpName</label>
            <div class="col-sm-5">
                <input type="text" name="EmpName" value="@Model.EmpName" class="form-control" />
            </div>
        </div><br />


        <div class="row">
            <label class="col-sm-2">Email</label>
            <div class="col-sm-5">
                <input type="email" name="Email" value="@Model.Email" class="form-control" />
            </div>
        </div><br />


        <div class="row">
            <label class="col-sm-2">ContactNo</label>
            <div class="col-sm-5">
                <input type="number" name="ContactNo" value="@Model.ContactNo" class="form-control" />
            </div>
        </div><br />


        <div class="row">
            <div class="col-sm-5">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>


    </div>
</form>