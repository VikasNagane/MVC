
@{
    ViewBag.Title = "Add";
}

<h6>Add</h6>

<h1 class='text-center bg-primary text-white'> Add Employee </h1><br>
<form action="~/Home/Add" method="post">
        <div class="container text-center">
            <div class="row">
                <label class="col-sm-2">EmpID</label>
                <div class="col-sm-5">
                    <input type="number" name="EmpID" class="form-control " />
                </div>
            </div><br />    
            <div class="row">
                <label class="col-sm-2">EmpName</label>
                <div class="col-sm-5">
                    <input type="text" name="EmpName" class="form-control" />
                </div>
            </div><br />    
            <div class="row">
                <label class="col-sm-2">Email</label>
                <div class="col-sm-5">
                <input type="email" name="Email" class="form-control" />
                </div>
            </div><br />    
            <div class="row">
                <label class="col-sm-2">ContactNo</label>
                <div class="col-sm-5">
                    <input type="number" name="ContactNo" class="form-control" />
                </div>
            </div><br />    
            <div class="row">
                <div class="col-sm-5">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
</form>





